<div class="container">
  <% if @book.errors.any? %>
    <h2> <%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved: </h2>
    <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %> 
  <% end %>
  
  <div class="row">
    <div class="col-xs-3" >
      <%= render 'users/list', user: @user %>
      <%= render 'books/list', book: @book %>
    </div>
    <div class="col-xs-9" >
      <h1>Books</h1>
      <table class="table table-striped">
        <th>image</th>
        <th>Title</th>
        <th>Opnion</th>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback:'no-img.jpg', size:'40x40' %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>