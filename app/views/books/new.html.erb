<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= form_for(@book) do |f| %>
      <%#image_tag %>
      <%= current_user.profile_imege_id %>
      <%= current_user.name %>
      
    <% if @book.errors.any? %>
      <%= @book.errors.count %>件のエラーが発生しました
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    <div>
      <label>Title</label>
      <%= f.text_field :title , class:"" , placeholder: "Title" %>
      <label>Opnion</label>
      <%= f.text_area  :body , class: "" , placeholder: "Body" %>
      <%= f.submit "送信", class:"" %>
    </div>
  <% end %>
<% end %>