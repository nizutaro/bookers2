<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/list', user: current_user %>
      <%= render 'books/list', book: @book %>
    </div>
    <div class="col-xs-9">
      <h1>Users</h1>
      <table class="table">
        <th>image</th>
        <th>name</th>
        <th></th>
        <% @users.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book, :profile_image, :fill, 100, 100, format: 'jpeg' ,fallback:'no-img.jpg',size:'40x40' %></td>
            <td><%= book.name %></td>
            <td><%= link_to "Show", user_path(book.id) %> </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>